<Page x:Class="_210.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_210.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <DockPanel>
        <UniformGrid Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Margin="5,5,5,0">
            <Button Content="log in" Click="Button_Click"/>
            <Button Content="Sing in" Click="Button_Click_1"/>
        </UniformGrid>
        <StackPanel>
            <ScrollViewer Height="400" Width="640" HorizontalAlignment="Left">
                <ItemsControl>
                    <TextBlock>
                        <Run Text="{Binding ProductPhoto.PhotoPath}"/>
                        <Run Text="{Binding Product.Titel}"/>
                    </TextBlock>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </DockPanel>
</Page>
