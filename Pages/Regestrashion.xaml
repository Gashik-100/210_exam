<Page x:Class="_210.Pages.Regestrashion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_210.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Regestrashion">

    <Grid>
        <StackPanel Margin="5">
          <Label Content="FirstName"/>
            <TextBox/>
            <Label Content="LastName"/>
            <TextBox/>
            <Label Content="Email"/>
            <TextBox/>
            <Label Content="Phone"/>
            <TextBox />
            <Label Content="Login"/>
            <TextBox/>
            <Label Content="Password"/>
            <TextBox/>
            <Label Content="Repeat password"/>
            <TextBox/>
        </StackPanel>
        <UniformGrid HorizontalAlignment="Center" VerticalAlignment="Bottom" Columns="2">
        <Button Content="Save" Width="100" Height="25" Click="Button_Click1"/>
        <Button Content="close" Width="100" Height="25"  Margin="5" Click="Button_Click"/>
        </UniformGrid>
    </Grid>
</Page>
