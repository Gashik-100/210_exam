<Page x:Class="_210.Pages.Welcom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_210.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcom">

    <Grid>
        <StackPanel Margin="5">
            <Label Content="Login" x:Name="LoginClient"/>
            <TextBox/>
            <Label Content="Password" x:Name="PasswordClient"/>
            <PasswordBox/>
            <UniformGrid Columns="2" Margin="5">
                <Button Content="Log in"/>
                <Button Content="Close" Click="Button_Click_1"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
